---
type Props = {
  title: string;
  full_screen?: boolean;
  px?: string;
  py?: string;
  className?: string;
};
const {
  title = "SubSection",
  full_screen = false,
  px = "4",
  py = "10",
  className = "",
} = Astro.props;
---

<section
  id={title.toLowerCase().replaceAll(" ", "")}
  class={`${full_screen ? "h-screen" : ""} px-${px} py-${py} !overflow-x-hidden ${className}`}
>
  <div class="w-full mt-16 mb-4 grid place-items-center">
    <h3 class="text-4xl md:text-4xl text-center">{`<${title} />`}</h3>
  </div>
  <div class="w-full">
    <slot />
  </div>
</section>
